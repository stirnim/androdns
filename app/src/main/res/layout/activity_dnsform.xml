<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_dnsform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="androdns.android.leetdreams.ch.androdns.DNSFormActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewMain"
        >

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageButton
                    android:id="@+id/btnBookmark"
                    android:onClick="toggleBookmark"
                    android:src="@drawable/ic_bookmark_24px"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />
            </LinearLayout>

            <TextView
                android:text="QNAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblQNAME"
                android:contentDescription="www.example.com"
                android:layout_gravity="left"

                />
        <EditText
            android:id="@+id/txtQname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="www.example.com"
            android:inputType="text"
            android:layout_weight="4"
            />

            <TextView
            android:text="DNS Server Host/IP/DoH URI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblServer" />


            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/txtServerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="blank: auto-detect"
            android:inputType="text"
            android:layout_weight="1"
            />

            <TextView
                android:text="Protocol/Port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblprotoport" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerProto"
                    android:layout_weight="1"
                    android:ems="3"
                    android:entries="@array/protocols" />
                <EditText
                    android:id="@+id/txtPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:hint="Port"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:text="53"
                    />
            </LinearLayout>
            <TextView
                android:text="QTYPE / CLASS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lbltypeclass" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerKnownTypes"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtQTYPE"
                android:layout_weight="1"
                android:text="1"
               />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCLASS"
                android:layout_weight="1"
                android:entries="@array/query_classes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbRD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="RD" />

            <CheckBox
                android:id="@+id/cbCD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CD" />

            <CheckBox
                android:id="@+id/cbDO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO" />

            <CheckBox
                android:id="@+id/cbTCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TCP" />

            <CheckBox
                android:id="@+id/cbPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pad" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="queryButtonClicked"
                android:text="Query" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/lblStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:enabled="false"
                    android:inputType="none"
                    android:text="Status" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/lblRCODE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:enabled="false"
                    android:inputType="none"
                    android:text="RCODE" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/lblServerIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:enabled="false"
                    android:inputType="none"
                    android:text="IP" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/lblQBytes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:enabled="false"
                    android:inputType="none"
                    android:text="QSize" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/lblABytes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription=""
                    android:enabled="false"
                    android:inputType="none"
                    android:text="ASize" />
            </TableRow>
            <TableRow  android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtRcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtServerIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtQbytes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtAbytes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbaAA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="AA" />

            <CheckBox
                android:id="@+id/cbaTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="TC" />

            <CheckBox
                android:id="@+id/cbaRD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="RD" />

            <CheckBox
                android:id="@+id/cbaRA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="RA" />

            <CheckBox
                android:id="@+id/cbaAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="AD" />

            <CheckBox
                android:id="@+id/cbaCD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="CD" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textIsSelectable="true"
                android:ellipsize="none"
                android:scrollHorizontally="true" />

        </HorizontalScrollView>


    </LinearLayout>

    </ScrollView>
</LinearLayout>
